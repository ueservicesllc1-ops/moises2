rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // REGLAS TEMPORALES PARA DESARROLLO - PERMITIR TODO
    match /{document=**} {
      allow read, write: if true;
    }
    
    // Reglas específicas para la colección de canciones
    match /songs/{songId} {
      allow read, write: if true;
    }
    
    // Reglas para otras colecciones
    match /newsongs/{songId} {
      allow read, write: if true;
    }
  }
}
